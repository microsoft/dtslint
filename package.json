{
  "name": "dtslint",
  "version": "3.4.2",
  "description": "Runs tests on TypeScript definition files",
  "files": [
    "bin",
    "dt.json",
    "dtslint.json",
    "dtslint-expect-only.json"
  ],
  "main": "bin",
  "bin": "./bin/index.js",
  "contributors": [
    "Nathan Shively-Sanders <nathansa@microsoft.com> (https://github.com/sandersn)",
    "Andy Hanson <andy-ms@microsoft.com> (https://github.com/andy-ms)",
    "Dan Vanderkam <danvdk@gmail.com> (https://github.com/danvk)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/dtslint.git"
  },
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json --format stylish",
    "test": "npm run build && node test/test.js",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "dependencies": {
    "definitelytyped-header-parser": "3.9.0",
    "dts-critic": "^3.0.2",
    "fs-extra": "^6.0.1",
    "json-stable-stringify": "^1.0.1",
    "strip-json-comments": "^2.0.1",
    "tslint": "5.14.0",
    "typescript": "next",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/node": "12.0.x",
    "@types/strip-json-comments": "^0.0.28",
    "@types/yargs": "^15.0.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "license": "MIT"
}
